<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shubham.searchtheweb.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="15sp"
            android:weightSum="1">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.89"
                android:id="@+id/search_text"
                android:inputType="text" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/search_button"
                android:layout_weight="0.11" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter A Search Term Before Searching"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/search_error_text" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google"
            android:textSize="22sp"
            android:visibility="gone"
            android:layout_marginBottom="5sp"
            android:background="#3f85f4"
            android:id="@+id/google_search_button"
            android:drawableStart="@drawable/google" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yahoo"
            android:textSize="22sp"
            android:visibility="gone"
            android:layout_marginBottom="5sp"
            android:background="#6d3590"
            android:id="@+id/yahoo_search_button"
            android:drawableStart="@drawable/yahoo" />

        <Button
            android:id="@+id/ddg_search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:background="#d94926"
            android:visibility="gone"
            android:drawableStart="@drawable/ddg"
            android:text="Duck Duck GO"
            android:textSize="22sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stack Overflow"
            android:layout_marginBottom="5sp"
            android:background="#f83f00"
            android:visibility="gone"
            android:textSize="22sp"
            android:id="@+id/stackoverflow_search_button"
            android:drawableStart="@drawable/stackoverflow" />

    </LinearLayout>

</ScrollView>